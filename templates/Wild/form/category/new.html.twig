{% extends 'base.html.twig' %}

{% block title 'Ajouter categorie' %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="container mt-4">
        <div class="row">

            <div class="col-lg-6 col-md-12">
                <h2>Mes catégories</h2>

                {% for category in categories %}
                    <div class="my_categories">
                        {{ loop.index }}- {{ category.name }}
                    </div>
                {% endfor %}
            </div>

            <div class="col-lg-6 col-md-12 add_category">
                <h2 class="mb-3">Ajouter une catégorie</h2>
                {{ include('Wild/form/category/_form.html.twig') }}
            </div>

        </div>
    </div>

{% endblock %}
