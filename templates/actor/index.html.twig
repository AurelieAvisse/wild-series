{% extends 'base.html.twig' %}

{% block title %} Acteurs {% endblock %}

{% block body %}

    <div class="container-fluid mt-4">

        <div class="d-flex mb-5">
            <h4 class="actor-title">Nom de l'acteur:</h4>
            <div class="ml-4">
                <h4 class="actor-name">{{ actor.name }}</h4>
            </div>
        </div>

        <div class="d-flex mb-5">
            <h4 class="actor-title">Ses films:</h4>
            <div class="ml-4">
                {% for program in actor.programs %}
                    <a href="{{ path('show_program', {'slug': program.slug }) }}" class="actor-program-title">
                        <h4 class="actor-program-title">{{ program.title }}</h4>
                    </a>
                {% endfor %}
            </div>
        </div>

    </div>

{% endblock %}

