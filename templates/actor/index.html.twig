{% extends 'base.html.twig' %}

{% block title %} Acteurs {% endblock %}

{% block body %}

    <div class="container mt-4">

        <div class="d-flex mb-5">
            <div class="actor-title">Nom de l'acteur:</div>
            <div class="ml-4">
                <div class="actor-name">{{ actor.name }}</div>
            </div>
        </div>


        <div class="d-flex mb-5">
            <div class="actor-title">Ses films:</div>
            <div class="ml-4">
                {% for program in actor.programs %}
                    <a href="{{ path('show_program', {'programName': program.title }) }}" class="actor-program-title">
                        <div>{{ program.title }}</div>
                    </a>
                {% endfor %}
            </div>
        </div>

    </div>

{% endblock %}

