{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}

    <div class="container mt-4">
        <div class="d-flex mt-3">
            <h3 class="mt-0">{{ episode.season.program.title }} - {{ episode.season.year }}</h3>
            <a href="{{ path('episode_edit', {'id': episode.id}) }}"
               class="actionSeason mx-4">
                <i class='fa fa-pencil'></i>
            </a>
            {{ include('episode/_delete_form.html.twig') }}
        </div>

        <div class="info-season">Episode: <span class="season-year ml-3">{{ episode.number }}</span></div>
        <div class="info-season">Titre: <span class="season-year ml-3">{{ episode.title }}</span></div>
        <div class="info-season">Synopsis: <span class="season-year ml-3">{{ episode.synopsis }}</span></div>

        <div class="mt-4">
            <a href="{{ path('episode_index') }}" class="backProgram">
                <i class='fa fa-mail-reply mr-2'></i>
                Retour à la liste des épisodes</a>
        </div>

    </div>
{% endblock %}
