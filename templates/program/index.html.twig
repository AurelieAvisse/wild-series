{% extends 'base.html.twig' %}

{% block title %}Séries index{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="container-fluid mt-3">

        <h2>Mes séries </h2>

        <a href="{{ path('program_new') }}" class="add-crud">
            <i class='fa fa-plus fa-plus-navbar mr-2' style='font-size:1em;color:#00fff7'></i>
            Ajouter une série
        </a>

        {% for category in categories %}
            <h3 class="mt-md-5 mt-lg-4">{{ category.name }}</h3>

            <div class="row mt-2">

                {% for program in category.programs %}
                    <div class="col-lg-2 col-3">

                        <div class="card card-program mt-md-4 mt-lg-1">
                            <img class="card-img-top card-img-program" src="{{ program.poster }}" alt="Card image cap">
                            <div class="card-body card-body-program">
                                <div class="card-text" style="margin-top: -10px;">
                                    <a href="{{ path('program_show', {'slug': program.slug}) }}"
                                       class="details">
                                        + détails</a>
                                </div>
                            </div>
                        </div>

                    </div>
                {% else %}
                    <p class="ml-4 text-white">Aucune série</p>
                {% endfor %}

            </div>

        {% endfor %}

    </div>
{% endblock %}
