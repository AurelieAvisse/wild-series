{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="container-fluid mt-3">

        <h2>Mes séries </h2>

        <a href="{{ path('program_new') }}" class="addProgram">Créer une nouvelle série</a>

        <div class="container-fluid d-flex justify-content-center">
            <div class="row">

                {% for program in programs %}
                    <div class="col-lg-4 col-md-6">
                        <div class="card crud-program-card mb-3 mt-5" style="max-width: 50rem;">
                            <div class="row no-gutters">
                                <div class="col-md-5">
                                    <a href="{{ path('show_program', {'programName': program.title}) }}">
                                        <img src="{{ program.poster }}" class="card-img" alt="...">
                                    </a>
                                </div>
                                <div class="col-md-7">
                                    <div class="card-body">
                                        <a href="{{ path('program_edit', {'id': program.id}) }}"
                                           class="actionProgram">Modifier</a>
                                        <br>
                                        {{ include('program/_delete_form.html.twig') }}
                                        <h5 class="card-title crud-program-title mt-2">{{ program.title }}</h5>
                                        <p class="card-text crud-program-text mt-4">{{ program.summary }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>

    </div>
{% endblock %}
