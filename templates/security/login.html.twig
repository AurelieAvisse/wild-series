{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|replace({"Invalid credentials." : "Identifiants invalides !"}) }}</div>
    {% endif %}

    <div class="container my-5">

        <form method="post">

            <h2 class="mb-3 font-weight-normal text-center">Veuillez vous connecter</h2>

            <div class="form-group d-flex flex-column align-items-center mt-lg-3 mt-md-5">
                <div class="row">
                    <div class="col mt-lg-1 mt-md-4">
                        <label for="inputEmail" class="form-label mt-4">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               class="form-control"
                               required
                               autofocus>
                    </div>
                </div>
            </div>

            <div class="form-group d-flex flex-column align-items-center">
                <div class="row">
                    <div class="col my-lg-1 my-md-4">
                        <label for="inputPassword" class="form-label mt-4">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                    </div>
                </div>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">

            <div class="row">
                <div class="col-12 d-flex justify-content-center">
                    <button class="btn btn-lg btn-connexion mt-5" type="submit">
                        Se connecter
                    </button>
                </div>
            </div>
        </form>

    </div>
{% endblock %}
